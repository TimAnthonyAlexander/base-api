{
    "name": "timanthonyalexander/base-api",
    "description": "A tiny, KISS-first PHP 8.4 framework for building JSON-first APIs",
    "type": "library",
    "license": "MIT",
    "keywords": ["framework", "api", "php", "json", "rest"],
    "authors": [
        {
            "name": "Tim Anthony Alexander",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "BaseApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BaseApi\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/console"
    ],
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=256M",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    }
}
