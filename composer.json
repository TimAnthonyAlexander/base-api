{
    "name": "timanthonyalexander/base-api",
    "description": "A tiny, KISS-first PHP 8.4 framework for building JSON-first APIs",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "framework",
        "api",
        "php",
        "json",
        "rest"
    ],
    "authors": [
        {
            "name": "Tim Anthony Alexander",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "ergebnis/phpunit-slow-test-detector": "^2.20",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "BaseApi\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BaseApi\\Tests\\": "tests/"
        }
    },
    "bin": [
        "mason"
    ],
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=256M src",
        "phpunit-testdox": "phpunit --colors=always --testdox tests/",
        "phpunit": "phpunit --colors=always tests/",
        "test-unit": "phpunit --colors=always --testdox",
        "rector": "vendor/bin/rector process --dry-run",
        "rector:fix": "vendor/bin/rector process",
        "rector:ci": "vendor/bin/rector process --dry-run --ansi"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    }
}
